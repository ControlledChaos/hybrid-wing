<!DOCTYPE html>
<html {{ language_attributes() }}>
<head>
	{% block head %}
		<meta http-equiv="Content-Type" content="{{ bloginfo( 'html_type' ) }}; charset={{ bloginfo( 'charset' ) }}" />
		<title>{{ hybrid_document_title() }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="profile" href="http://gmpg.org/xfn/11" />
		<link rel="pingback" href="{{ bloginfo( 'pingback_url' ) }}" />

		{{ wp_head() }}
	{% endblock %}
</head>

<body class="{{ hybrid_body_attributes() }}">

{% block container %}
<div id="container">

	{% block header %}
		<header id="header">
			{% from 'twig/navbar.twig' import navbar %}
			{{ navbar( {'menu' : 'navbar'} ) }}
		</header>
	{% endblock %}

	{% block main %}
	<div id="main">

		{% block content %}
		<div id="content" class="hfeed">

			{% block breadcrumb breadcrumb_trail() %}

			{% block loop %}
			{% loop %}
			<article {{ hybrid_post_attributes() }}>

				{% block entry_title do_shortcode( '[entry-title]' ) %}

				<div class="entry-content">
					{{ the_content( sprintf( __( 'Continue reading %1$s', 'hybrid-wing' ), the_title( ' "', '"', false ) ) ) }}
					{{ wp_link_pages() }}
				</div>

			</article>

			{# TODO else {{ get_template_part( 'loop-error' ) }} #}
			{% endloop %}
			{% endblock loop %}

			{% block loop_nav loop_pagination() %}
		</div>
		{% endblock content %}

		{{ get_sidebar( 'primary' ) }}

	</div>
	{% endblock main %}

	{% block footer %}
		<footer id="footer">
			<p class="credit">{{ apply_atomic_shortcode( 'footer-content', __( '&copy; [the-year] [site-link]. Powered by [theme-link].' ) ) }}</p>
		</footer>
	{% endblock %}
</div>
{% endblock container %}

{{ wp_footer() }}
</body>
</html>